	 <h1 class="text-center">Editar Orador</h1>
	<section class="container text-center p-3">
	<form action="/editar-orador/{{data.id}}" method="POST">
		<div class="mb-3">
			<label for="nombre" class="form-label">Nombre</label>
			<input type="text" id="nombre" value={{data.nombre}} name="nombre">
		</div>
		<div class="mb-3">
			<label for="apellido" class="form-label">Apellido</label>
			<input type="text" id="apellido" value={{data.apellido}} name="apellido">
		</div>
		<div class="mb-3">
			<label for="asunto" class="form-label" style="margin-right: 16px;">Fecha</label>
			<input type="text" id="asunto" value={{data.asunto}} name="asunto">
		</div>
		<button type="submit" class="btn btn-dark">Editar Orador</button>
		<a href="/"><button type="button" class="btn btn-dark">Cancelar</button></a>
	</form>
